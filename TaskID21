public class TaskID21 {
    // Количество элементов сгенерированного массива.
    public static int SIZE = 30;
    // Минимальное значение.
    public static int MIN = 100;
    // Максимальное значение.
    public static int MAX = 200;
    // Количество максимальных значений.
    public static int NMAX = 5;

    public static void main(String[] args) {
        // Объявление массива.
        int[] list = new int[TaskID21.SIZE];
        // Генерация массива.
        for (int i = 0; i < TaskID21.SIZE; i++) {
            list[i] = TaskID21.MIN+ (int)Math.round(Math.random()*(TaskID21.MAX - TaskID21.MIN));
        }
        // Печать в консоль.
        System.out.println("Рандомный массив:");
        // Перенаправление в Печать в консоль.
        TaskID21.printList(list);

        // Перенаправление 1.
        int[] sList = TaskID21.sortList(list);
        // Печать в консоль.
        System.out.println("Возрастающий рандомный массив:");
        // Перенаправление в Печать в консоль.
        TaskID21.printList(sList);

        // Пееренаправление 2.
        int[] sListMAX = TaskID21.sortListMAX(sList);
        // Печать в консоль.
        System.out.println(NMAX+" самых больших элементов массива:");
        // Перенаправление в Печать в консоль.
        TaskID21.printList(sListMAX);
    }
    // 1.
    private static int[] sortList(int[] list) {
        boolean flag;
        // Переменная для временного сохранения элемента массива в цикле.
        int save;
        do {
            flag = false;
            // Сортировка ( i - n-элемент массива для проверки).
            for (int i = 0; i+1 < list.length; i++) {
                // Если a число больше b числа ...
                if (list[i] > list[i+1]) {
                    // Сохранить a число.
                    save = list[i];
                    // За место a числа вставить b число.
                    list[i] = list[i+1];
                    // а числом заменить b.
                    list[i+1] = save;
                    flag = true;
                }
            }
        } while (flag);
        // Вывести массив.
        return list;
    }
    // 2.
    private static int[] sortListMAX(int[] list) {
        // Объявление нового массива с 5 элементами.
        int[] sListMAX = new int[TaskID21.NMAX];
        // Из list[25+i] добавить в sListMAX[0+i], пока цикл не достиг 5.
        System.arraycopy(list, TaskID21.SIZE - TaskID21.NMAX, sListMAX, 0, TaskID21.NMAX);
        // Вывести массив.
        return sListMAX;
    }
    // Печать в консоль.
    private static void printList(int[] list) {
        // Печать каждого элемента массива по очереди, добавляя пробел.
        for (int i = 0; i < list.length; i++) {
            System.out.print(list[i] + "\t");
        }
        // Переместиться на следующую строчку.
        System.out.println();
    }
}
