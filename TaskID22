public class TaskID22 {
    // Количество элементов сгенерированного массива.
    public static int SIZE = 21;

    public static void main(String[] args) {
        // Получить a массив для примера.
        int[] a = new int[TaskID22.SIZE];
        int z = 10;
        // Генерация массива a.
        for (int i = 0; i < TaskID22.SIZE; i++) {
            a[i] = z;
            z--;
        }
        // Печать в консоль.
        System.out.println("Дан массив a:");
        // Перенаправление в Печать в консоль.
        TaskID22.printList(a);

        // Перенаправление 1.
        int[] listP = TaskID22.ListP(a);
        // Печать в консоль.
        System.out.println("Положительные числа, делящиеся на 3:");
        // Перенаправление в Печать в консоль.
        TaskID22.printList(listP);

        // Пееренаправление 2.
        int[] SListP = TaskID22.sortListP(listP);
        // Печать в консоль.
        System.out.println("Положительные числа, делящиеся на 3 по возрастанию:");
        // Перенаправление в Печать в консоль.
        TaskID22.printList(SListP);
    }
    // 1.
    private static int[] ListP(int[] list) {
        // Переменная для счёта подходящих элементов.
        int i = 0;
        // Подсчёт для получения количества элементов массива b.
        for (int z = 0; z < TaskID22.SIZE; z++) {
            // Если элемент массива a больше 0 (те положителен) и b делится без остатка на 3...
            if (list[z] > 0 && list[z] % 3 == 0) {
                // Добавить 1 место для массива.
                i++;
            }
        }
        // Объявление нового массива b с i элементами.
        int[] listP = new int[i];
        // Переменная для элементов массива b.
        i = 0;
        // Копирование необходимых элементов массива а в b.
        for (int z = 0; z < TaskID22.SIZE; z++) {
            // Если элемент массива a больше 0 (те положителен) и b делится без остатка на 3...
            if (list[z] > 0 && list[z] % 3 == 0) {
                // Добавить в список b.
                listP[i] = list[z];
                i++;
            }
        }
        // Вывести массив.
        return listP;
    }
    // 2.
    private static int[] sortListP(int[] listP) {
        boolean flag;
        // Переменная для временного сохранения элемента массива в цикле.
        int save;
        do {
            flag = false;
            // Сортировка ( i - n-элемент массива для проверки).
            for (int i = 0; i+1 < listP.length; i++) {
                // Если a число больше b числа ...
                if (listP[i] > listP[i+1]) {
                    // Сохранить a число.
                    save = listP[i];
                    // За место a числа вставить b число.
                    listP[i] = listP[i+1];
                    // а числом заменить b.
                    listP[i+1] = save;
                    flag = true;
                }
            }
        } while (flag);
        // Вывести массив.
        return listP;
    }
    // Печать в консоль.
    private static void printList(int[] list) {
        // Печать каждого элемента массива по очереди, добавляя пробел.
        for (int i = 0; i < list.length; i++) {
            System.out.print(list[i] + "\t");
        }
        // Переместиться на следующую строчку.
        System.out.println();
    }
}
