// Класс: Students - Студент
public class Students {
    /*  Свойства:
    Id_studenta - номер зачетной книжки;
    Fam - фамилия;
    Name - имя;
    Groupa - группа;
    Department - кафедра;
    Discipline - Дисциплина;
    mark - Оценка;
    NameTeacher - Фамилия преподавателя; */

    // Свойства:
    public static int Id_studenta;
    public static String Fam;
    public static String Name;
    public static String Groupa;
    public static String Department;
    public static String Discipline;
    public static int mark;
    public static String NameTeacher;

    // Конструктор:
    public Students(int Id_studenta, String Fam, String Name, String Groupa, String Department, String Discipline, int mark, String NameTeacher) {
        this.Id_studenta = Id_studenta;
        this.Fam = Fam;
        this.Name = Name;
        this.Groupa = Groupa;
        this.Department = Department;
        this.Discipline = Discipline;
        this.mark = mark;
        this.NameTeacher = NameTeacher;
    }
    // Геттер Id_studenta:
    public int getIDStudenta() { return Id_studenta; }
    // Сеттер Id_studenta:
    public void setIDStudenta(int Id_studenta) { this.Id_studenta = Id_studenta; }
    // Геттер Fam:
    public String getFam() { return Fam; }
    // Сеттер Fam:
    public void setFam(String Fam) { this.Fam = Fam; }
    // Геттер Name:
    public String getName() { return Name; }
    // Сеттер Name:
    public void setName(String Name) { this.Name = Name; }
    // Геттер Groupa:
    public String getGroupa() { return Groupa; }
    // Сеттер Groupa:
    public void setGroupa(String Groupa) { this.Groupa = Groupa; }
    // Геттер Department:
    public String getDepartment() { return Department; }
    // Сеттер Department:
    public void setDepartment(String Department) { this.Department = Department; }
    // Геттер Discipline:
    public String getDiscipline() { return Discipline; }
    // Сеттер Discipline:
    public void setDiscipline(String Discipline) { this.Discipline = Discipline; }
    // Геттер mark:
    public int getmark() { return mark; }
    // Сеттер mark:
    public void setmark(int mark) { this.mark = mark; }
    // Геттер NameTeacher:
    public String getNameTeacher() { return NameTeacher; }
    // Сеттер NameTeacher:
    public void setNameTeacher(String NameTeacher) { this.NameTeacher = NameTeacher; }

    // Перекрываю метод toString() для вывода полной информации об объекте в отформатированном виде:
    @Override
    public String toString() {
        return "Студент [" + "\n " +
                "Номер зачетной книжки: " + Id_studenta + "\n " +
                "Фамилия: " + Fam + "\n " +
                "Имя: " + Name + "\n " +
                "Группа: " + Groupa + "\n " +
                "Кафедра: " + Department + "\n "  +
                "Дисциплина: " + Discipline + "\n "  +
                "Оценка: " + mark + "\n" +
                "Фамилия преподавателя: " + NameTeacher + "]";
    }
}
